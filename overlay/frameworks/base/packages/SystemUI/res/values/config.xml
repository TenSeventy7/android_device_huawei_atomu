<resources>
    <!-- Doze: does this device support STATE_DOZE and STATE_DOZE_SUSPEND?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- If true, enable the advance anti-falsing classifier on the lockscreen. On some devices it
         does not work well, particularly with noisy touchscreens. Note that disabling it may
         increase the rate of unintentional unlocks. -->
    <bool name="config_lockscreenAntiFalsingClassifierEnabled">false</bool>

    <!-- Add minimal screen curve as requested. -->
    <dimen name="rounded_corner_content_padding">8.0dip</dimen>               <!-- Add content padding for screen curve. -->
    <dimen name="rounded_corner_radius">10.0dip</dimen>

    <!-- Show signal as one higher so HSPAP doesn't look bad empty. -->
    <bool name="config_inflateSignalStrength">true</bool>
    
</resources>
